<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:drawable="@drawable/loading_circle_base"
        android:height="45dp"
        android:width="45dp"
        android:gravity="center"/>
    <item
        android:height="45dp"
        android:width="45dp"
        android:gravity="center">
        <rotate
            android:drawable="@drawable/loading_circle_loadbar"
            android:pivotX="50%"
            android:pivotY="50%"
            android:fromDegrees="0"
            android:toDegrees="360"/>
    </item>

</layer-list>